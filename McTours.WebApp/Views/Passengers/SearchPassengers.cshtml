@model SearchPassengerDto

<h4>Yolcu Bilgileri</h4>

<div class="row">
    <div class="col-12 col-md-5">
        <form id="search_passengers_form">
            <div class="mb-3">
                <label asp-for="IdentityNumber" class="form-label">Kimlik No</label>
                <input asp-for="IdentityNumber" type="text" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="FirstName" class="form-label">Adı</label>
                <input asp-for="FirstName" type="text" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="LastName" class="form-label">Soyadı</label>
                <input asp-for="LastName" type="text" class="form-control" />
            </div>
            <div class="mb-3 text-end">
                <button id="search_passengers_button" type="button" class="btn btn-outline-success">
                    Ara
                </button>
            </div>
        </form>
    </div>
    <div class="col-12 col-md-7">
        <div class=" ">
            <table class="table table-bordered table-sm">
                <thead>
                    <tr>
                        <th>Kimlik No</th>
                        <th>Adı</th>
                        <th>Soyadı</th>
                        <th class="d-none d-lg-table-cell">Cinsiyet</th>
                    </tr>
                </thead>
                <tbody id="search_passengers_table">
                    <button id="create_passenger_button">

                    </button>
                </tbody>
            </table>
        </div>
    </div>
</div>