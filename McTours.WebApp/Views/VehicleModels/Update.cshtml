@using McTours.VehicleModels;
@model VehicleModelDto

<h1>
    Model Güncelleme : @Model.Id ID'li Kayıt
</h1>

<div class="row">
    <div class="col-12 col-sm-10 col-md-7 col-lg-5">

        @if (ViewData.ContainsKey("SuccessMessage"))
        {
            @MessageHelper.DisplaySuccess(ViewBag[Keys.SuccessMessage]);
        }
        @if (ViewData.ContainsKey("ErrorMessage"))
        {
            @MessageHelper.DisplayError(ViewBag.ErrorMessage)
        }
        <form asp-controller="VehicleModels" asp-action="Update" method="post">
            <div class="mb-3">
                <label asp-for="VehicleMakeId" class="form-label">Marka Adı</label>
                @*<input type="text" id="id" name="id" class="form-control" value="@Model.VehicleMakeId" readonly />*@
                @*@Html.TextBoxFor(x=>x.VehicleMakeId, (string)ViewBag.VehicleMakes, new { @class = "form-control" , @readonly = true})*@
                <select asp-for="VehicleMakeId" asp-items="ViewBag.VehicleMakes" class="form-select">
                    <option value="">Lütfen Seçiniz</option>
                </select>

                <label for="name" class="form-label">Model Adı</label>
                <input asp-for="Name" type="text" class="form-control" />
            </div>
            <div class="mb-3">
                <div class="float-end">
                    <button class="btn btn-success">
                        Güncelle
                    </button>
                    <button asp-controller="VehicleModels" asp-action="Index" class="btn btn-warning">
                        İptal
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>