@model IEnumerable<VehicleMakeDto>

<h1>Tüm Markalar</h1>

<div class="row">
    <div class="col-12 col-sm-10 col-md-8">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["SuccessMessage"]
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                @TempData["ErrorMessage"]
            </div>
        }
        @if (TempData["ResultMessage"] != null)
        {
            <div class="alert alert-success">
                @TempData["ResultMessage"]
            </div>
        }
        <div class="float-end">
            <a class="btn btn-outline-primary btn-sm" asp-controller="VehicleMakes" asp-action="Create">
                Yeni Marka
            </a>
        </div>
        <table class="table table-striped table-hover ">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Marka Adı</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var vehicleMake in Model)
                {
                    <tr>
                        <td>@vehicleMake.Id</td>
                        <td>@vehicleMake.Name</td>
                        <td class="text-end">
                            <a class="btn btn-outline-primary btn-sm" asp-controller="VehicleMakes" asp-action="Update" asp-route-id="@vehicleMake.Id">Düzenle</a>
                            |
                            @* <a class="btn btn-outline-danger btn-sm" asp-controller="VehicleMakes" asp-action="Delete" asp-route-id="@vehicleMake.Id">Sil</a>*@
                            <form asp-action="Delete" method="post" class="delete-form d-inline-block">
                                <input type="hidden" value="@vehicleMake.Id" name="id">
                                <button class="btn btn-outline-danger btn-sm">Sil</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>